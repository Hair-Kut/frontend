{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
